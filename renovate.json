{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":approveMajorUpdates",
    ":label(dependencies)",
    ":semanticCommitType(chore)",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":dependencyDashboard",
    ":automergePatch",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":prConcurrentLimitNone",
    ":separatePatchReleases",
    "replacements:all",
    "workarounds:all",
    ":semanticPrefixFixDepsChoreOthers",
    "group:dotNetCore",
    "group:monorepos",
    "group:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "groupName": "ApplicationInsights",
      "matchPackageNames": [
        "/ApplicationInsights/"
      ]
    },
    {
      "groupName": "Dotnet",
      "matchPackageNames": [
        "dotnet-sdk",
        "mcr.microsoft.com/dotnet/aspnet",
        "mcr.microsoft.com/dotnet/sdk",
        "mcr.microsoft.com/dotnet/runtime",
        "mcr.microsoft.com/dotnet/runtime-deps"
      ],
      "extends": [
        ":disableMajorUpdates",
        ":pinDigestsDisabled"
      ]
    },
    {
      "groupName": "System.CommandLine",
      "matchPackageNames": [
        "System.CommandLine{/,}**"
      ]
    },
    {
      "groupName": "XUnit",
      "matchPackageNames": [
        "xunit{/,}**"
      ]
    },
    {
      "description": "Automerge github-actions updates",
      "matchManagers": ["github-actions"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Automerge major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pin",
        "pinDigest",
        "internal",
        "devDependencies",
        "ref",
        "none",
        "security",
        "grop",
        "unpin"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
  ],
  "platformAutomerge": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "dependencyDashboard": true,
  "gitAuthor": "Renovate Bot <bot@renovateapp.com>"
}
